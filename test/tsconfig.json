{
	"extends": "../tsconfig.json",
	"compilerOptions": {
		"allowJs": true,
		"jsx": "react",
		"outDir": "../lib/test",
		"paths": {
			"tsx-control-statements/*": [
				"../src/*"
			],
			"tsx-control-statements": [
				"../src/index.ts"
			]
		}
	},

	"references": [
		{
			"path": "../src/tsconfig.json"
		}
	],
	"include": [
		"compatibility-cases/*.jsx",
		"tsx-cases/*.tsx"
	]
}
